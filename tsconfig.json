{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "strict": false,
    "target": "es6",
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"],
    "declaration": true,
    "outDir": "./dist-esm",
    "skipLibCheck": true,
    "importHelpers": true
  },
  "include": ["./*.ts"],
  "exclude": [  "**/node_modules/**", "**/typings/**"]
}
